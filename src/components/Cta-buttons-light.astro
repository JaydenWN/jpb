---
import Image from "astro/components/Image.astro";
import callIcon from "@icons/call.svg";
---

<div class="cta-btns">
    <a href="tel:0423 740 299" class="secondary">
        <Image src={callIcon} alt="call jonesy private bartending" />
        Call
    </a>
    <a href="/contact-jonesy-private-bartending/#contact-form" class="primary">
        Book Your Bartender Now
    </a>
</div>

<style>
    .cta-btns {
        flex-wrap: wrap;
        display: flex;
        gap: 1em;
    }

    .primary {
        border-radius: 6em;
        background-color: var(--gold);
        width: fit-content;
        box-shadow: var(--box-shadow);
        font-weight: 800;
    }

    .secondary {
        border-radius: 6em;
        background-color: inherit;
        border: 1px solid var(--dark);
        width: fit-content;
    }
    a {
        text-decoration: none;
        display: flex;
        gap: 0.5em;
        align-items: center;
        justify-content: center;
        padding: 0.4em 1em;
        color: var(--dark);
    }

    @media (min-width: 1024px) {
        .primary {
            transition: all 0.25s ease-in-out;
        }
        .primary:hover {
            box-shadow: none;
        }
        .secondary {
            transition: all 0.25s ease-in-out;
        }
        .secondary:hover {
            box-shadow: none;
            box-shadow: var(--box-shadow);
        }
    }
</style>
