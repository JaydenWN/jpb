---
import CtaButtonsLight from "./Cta-buttons-light.astro";

const { title, text } = Astro.props;
---

<header>
    <div class="container">
        <h1>{title}</h1>
        <p>{text}</p>
        <CtaButtonsLight />
    </div>
</header>

<style>
    .container {
        display: flex;
        flex-direction: column;
        gap: 2em;
    }
    h1 {
        font-size: 2rem;
    }

    @media (min-width: 768px){
        .container{
            gap: 3em;
        }
    }
</style>
