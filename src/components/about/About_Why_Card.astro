---
import { Image } from "astro:assets";
import awardImage from "@icons/award.svg";
const { title, text } = Astro.props;
---

<div class="why-card">
    <Image src={awardImage} alt={title} />
    <div class="text-content">
        <h2>{title}</h2>
        <p>{text}</p>
    </div>
</div>

<style>
    .why-card {
        display: flex;
        gap: 1em;
    }
    .text-content {
        display: flex;
        flex-direction: column;
    }
</style>
